{% extends uns ~ '/base.html.twig' %}

{% block body %}
    {% block header %}
    <h1>{{ title }}</h1>
    {% endblock header %}
    {% block message %}
    {% if error is defined and error %} <div class="error">{{ error }}</div> {% endif %}
    {% if message is defined and message %} <div class="message">{{ message }}</div> {% endif %}
    {% for label, flashes in app.session.flashbag.all %}
    {% for flash in flashes %}
        <div class="{{ label }}">
            {{ flash }}
        </div>
    {% endfor %}
    {% endfor %}
    {% endblock message %}
    {% block user_login %}{% endblock user_login %}
    {% block user_register %}{% endblock user_register %}
    {% block user_recover_password %}{% endblock user_recover_password %}
    {% block user_change_password %}{% endblock user_change_password %}
{% endblock body %}
